# MongoDB - Reemplaza con tu URI de MongoDB Atlas
MONGODB_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/nahuel-cursos?retryWrites=true&w=majority
MONGODB_DB=nahuel-cursos

# NextAuth - Importante para autenticación
NEXTAUTH_URL=http://localhost:3000
# Genera un secreto seguro (puedes usar: openssl rand -base64 32)
NEXTAUTH_SECRET=tu_secreto_para_nextauth

# Google Authentication - Obtén estas credenciales desde Google Cloud Console
GOOGLE_CLIENT_ID=tu-cliente-id-de-google
GOOGLE_CLIENT_SECRET=tu-client-secret-de-google

# Usuario admin - Define qué correo tendrá privilegios de administrador
ADMIN_EMAIL=admin@ejemplo.com

# Mux Video API - Obtén estas credenciales desde el dashboard de Mux
MUX_TOKEN_ID=tu_token_id_de_mux
MUX_TOKEN_SECRET=tu_token_secret_de_mux